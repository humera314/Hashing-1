class Solution:
    def groupAnagrams(self, strs: List[str]) -> List[List[str]]:
        '''
        Sort the string, if soternd array is in dict
        append   Append the original word to the list of anagrams for this key
        '''
        myDict={}
       
        for s in strs:
            sorted_str = ''.join(sorted(s))
            
            if sorted_str in myDict:
                myDict[sorted_str].append(s)
            
            else:
                myDict[sorted_str]=[s]
        
        res=list(myDict.values())
                
       
        return res
        
